<import src="post-item/post-item-template.wxml"/>
<view>
  <swiper indicator-dots="{{swiper.indicatorDots}}"
  autoplay="{{swiper.autoplay}}" interval="{{swiper.interval}}" duration="{{swiper.duration}}">
    <block wx:for="{{swiper.imgUrls}}" wx:key="item">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>

  <view>
    <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx" wx:key="idx">
      <view catchtap="onPostTap(123)">
        <template is="postItem" data="{{...item}}" />
      </view>
    </block>
  </view>
</view>