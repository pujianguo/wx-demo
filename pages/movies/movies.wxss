/* pages/movies/movies.wxss */
@import "movie-list/movie-list-template.wxss"

.container{
  background-color: #f2f2f2;
}
.movies-template{
  margin-bottom: 30rpx;
}

.search{
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search-icon{
  margin: auto 0 auto 20rpx;
}
.search .placeholder{
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}
.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.search-cancel-img{
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}

.search-panel{
  position: absolute;
  top: 80rpx;
}
